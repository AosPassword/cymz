<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zia.gankcqupt_mvp.View.Activity.Page.PublishActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/publish_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:title=""/>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/publish_title"
            android:hint="标题"
            android:padding="3dp"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/publish_content"
            android:hint="有什么想说的？"
            android:textSize="20dp"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="8"
            android:gravity="top"
            android:background="@drawable/back_edit"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:padding="5dp">
            <ImageView
                android:id="@+id/publish_image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back_edit"
                android:src="@android:drawable/ic_input_add"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/publish_image2"
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back_edit"
                android:src="@android:drawable/ic_input_add"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/publish_image3"
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back_edit"
                android:src="@android:drawable/ic_input_add"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/publish_image4"
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back_edit"
                android:src="@android:drawable/ic_input_add"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/publish_image5"
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back_edit"
                android:src="@android:drawable/ic_input_add"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
